<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br/>

    <h3>Edit the Details</h3>
    <br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" class="form-control"  value="<%= listing.title %>"  type="text"/>
        </div>

        <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>        
        <textarea name="listing[description]" class="form-control" ><%= listing.description %></textarea>
        </div>
       

        <div class="mb-3">
        <lable for="image" class="form-lable">Image</lable>        
        <input name="listing[image]" class="form-control"  value="<%= listing.image %>" type="text"/>
        </div>
        

        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">Price</lable>        
        <input name="listing[price]" class="form-control"  value="<%= listing.price %>" type="number"/>
        </div>
       
        <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>        
        <input name="listing[country]" class="form-control"  value="<%= listing.country %>" type="text"/>
        </div>
        </div>
        
        
        <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>        
        <input name="listing[location]" class="form-control" value="<%= listing.location %>" type="text"/>
        </div>
        <br>  
        <button class="add-btn mt-3">Edit</button>     
        <br><br>                


    </form>
    </div>
    </div>
    
</body>
