<% layout('layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br/>

    <h3>Edit the Details</h3>
    <br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" class="form-control"  value="<%= listing.title %>"  type="text" required/>
        <div class="valid-feedback">Title ooks good!</div>        
        </div>



        <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>        
        <textarea name="listing[description]" class="form-control" required ><%= listing.description %></textarea>
        <div class="invalid-feedback">Description should be valid</div>        
        </div>
       

        <div class="mb-3">
        <lable for="image" class="form-lable" required="">Image</lable>        
        <input name="listing[image][url]" class="form-control"  value="<%= listing.image.url %>" type="text" required/>
        <div class="invalid-feedback">Image is required/div>         
        </div>

        

        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">Price</lable>        
        <input name="listing[price]" class="form-control"  value="<%= listing.price %>" type="number" required/>
        <div class="invalid-feedback">Please Enter an valid price</div>         
        </div>
         
       
        <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>        
        <input name="listing[country]" class="form-control"  value="<%= listing.country %>" type="text" required/>
        <div class="invalid-feedback">Country should be a valid</div>         
        </div>
        
        </div>
        
        
        <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>        
        <input name="listing[location]" class="form-control" value="<%= listing.location %>" type="text" required/>
                <div class="invalid-feedback">Location should be a valid</div>   
        </div>
        
        <br>  
        <button class="add-btn mt-3">Edit</button>     
        <br><br>                


    </form>
    </div>
    </div>
    
</body>

<script src="/js/script.js"></script>
