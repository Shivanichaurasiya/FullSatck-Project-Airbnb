<% layout('layouts/boilerplate') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br/>
    <h3>Create a new list</h3>
    <br>
    <form method="POST" action="/listings">
        <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" class="form-control" placeholder="Enter title" type="text"/>            
        </div>
        

        <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>            
        <textarea name="listing[description]" class="form-control" placeholder="Enter description"></textarea>            
        </div>
        

        <div class="mb-3">
        <lable for="image" class="form-lable">Image</lable>            
        <input name="listing[image]" class="form-control" placeholder="Enter image URL/Link" type="text"/>            
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">Price</lable>            
        <input name="listing[price]" class="form-control" placeholder="Enter price" type="number"/>
        </div>
       

        <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>            
        <input name="listing[country]" class="form-control" placeholder="Enter countery" type="text"/>
        </div>

        </div>
        

        <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>            
        <input name="listing[location]" class="form-control" placeholder="Enter location" type="text"/>
        </div>
        <br>
         

        <button class="btn btn-dark add-btn">Add</button>                     


    </form>
    <br><br><br>

    </div>

    </div>
    
</body>
</html>